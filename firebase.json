{
  "hosting": [
    { // Koristimo array za hosting konfiguraciju
      "site": "roperescuehr", // <-- OVDJE DEFINIRAMO TAČAN SITE ID!
      "public": "out", // Next.js će generirati statične datoteke u 'out' folder
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=3600"
            }
          ]
        }
      ]
    }
  ]
}
