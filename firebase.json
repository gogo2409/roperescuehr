{
  "hosting": [
    { // <-- Ovdje koristimo array za hosting konfiguraciju
      "target": "default-site", // <-- NOVO: Definiramo jedinstveni target za ovaj site
      "public": "out", // Next.js će generirati statične datoteke u 'out' folder
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=3600"
            }
          ]
        }
      ]
    }
  ]
}
